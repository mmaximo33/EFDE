#!/usr/bin/env bash
set -euo pipefail

_mod_.set_variable() {

    if [ "$#" -ne 3 ]; then
        echo "Error: Se requieren tres parámetros: key, value, file"
        return 1
    fi

    local key="$1"
    local value="$2"
    local file="$3"

    key=$(echo "$key" | tr '[:lower:]' '[:upper:]' | tr ' ' '_')

    if [ ! -e "$file" ]; then
        touch "$file"
    fi

    if grep -q "^$key=" "$file"; then
        # Update existing
        sed -i "s/^$key=.*/$key=\"$value\"/" "$file"
    else
        # add new
        echo "$key=\"$value\"" >> "$file"
    fi
}

_mod_.get_variable() {
    if [ "$#" -ne 2 ]; then
        echo "Error: Se requieren dos parámetros: key, file"
        return 1
    fi

    local key="$1"
    local file="$2"

    key=$(echo "$key" | tr '[:lower:]' '[:upper:]' | tr ' ' '_')

    if [ -e "$file" ]; then
        local value=$(grep "^$key=" "$file" | sed "s/^$key=//")
        if [ -n "$value" ]; then
            value=$(echo "$value" | sed 's/^"\(.*\)"$/\1/')
            echo -n "$value"
        else
            echo "No encontrado"
        fi
    else
        echo "Error: El archivo $file no existe."
        return 1
    fi
}
